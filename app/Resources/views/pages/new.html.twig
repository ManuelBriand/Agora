{% extends 'base.html.twig' %}

{% block body %}

        <h1 class="center white-text">Poster votre pensée</h1>
    <div class="section white">
        {{ form_start(form) }}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(form.author) }}
                        {{ form_errors(form.author) }}
                        <label for="pseudo">Votre pseudo</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                        <label for="title">Titre</label>
                    </div>
                    <div class="input-field col s12 m6">
                        {{ form_widget(form.categories) }}
                        {{ form_errors(form.categories) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(form.content, { 'attr': {'class': 'materialize-textarea'} }) }}
                        {{ form_errors(form.content) }}
                        <label for="content">Votre pensée</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12 m6">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                        <label for="email">Email</label>
                    </div>
                    <div class="input-field col s12 m6">

                        <input type="submit" value="Poster" class="waves-effect waves-light btn orange darken-3"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
