{% extends 'base.html.twig' %}

{% block body %}
<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <h1 class="header center white-text">Fulgurance</h1>
            <div class="row center">
                <h5 class="header col s12 white-text"> Place publique de libre pensée, ou chaqu'un est écouté, osez partager vos fulgurance ! </h5>
            </div>

            <br><br>

        </div>
    </div>
    <div class="parallax"><img src="{{ asset('assets/images/stars.jpeg') }}" alt=""></div>

</div>

<section>
    <div class="section">
        {% for thought in thoughts %}
            {% if thought.visible == 1 and thought.categories == 'fulgurance' %}
                <div class="section">
                    <div class="container">
                        <div class="row">
                            <div class="col s12">
                                <div class="card">
                                    <div class="card-content">
                                        <span class="card-title">{{ thought.title }}</span>
                                        <blockquote>
                                            {{ thought.content }}
                                            <br>
                                            <cite>{{ thought.author }}</cite>

                                        </blockquote>
                                    </div>
                                    <div class="card-action">
                                        <a href="#">Commenter</a>
                                        <a href="#">This is a link</a>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            {% endif %}
        {% endfor %}
</section>
<div class="parallax-container">
    <div class="parallax"><img src="{{ asset('assets/images/stars.jpeg') }}"></div>
</div>
{% endblock %}